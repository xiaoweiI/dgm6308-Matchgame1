            <TextBlock Text="?" Grid.Column="6" Grid.Row="1" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="?" Grid.Column="7" Grid.Row="1" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
